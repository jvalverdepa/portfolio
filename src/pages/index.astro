---
import Experience from "../components/Experience.astro";
import SocialPill from "../components/SocialPill.astro";
import Layout from "../layouts/Layout.astro";
import LinkedInIcon from "../components/icons/LinkedIn.astro";
import GitHubIcon from "../components/icons/GitHub.astro";
import MailIcon from "../components/icons/Mail.astro";
---

<Layout
  title="Javier Valverde Portfolio - Web Developer with 5 years of experience"
  description="Contrátame para crear tu aplicación web o móvil. Desarrollador Web. Especializado en crear aplicaciones únicas."
>
  <main class="max-w-xl mx-auto space-y-4">
    <section class="pt-56 pb-28">
      <h1
        class="text-gray-900 dark:text-white text-3xl md:text-4xl lg:text-5xl font-bold"
      >
        Hey, I'm Javier Valverde
      </h1>
      <h2 class="mt-4">
        <span>+5 years of experience.</span>
        <span class="text-yellow-800 dark:text-yellow-200">
          Web and Mobile Developer.</span
        >
        <span class="text-red-800 dark:text-red-200">
          Living in Lima, Perú.</span
        >
        <span class="text-sky-800 dark:text-sky-200">
          Passionate about creating experiences that are easy to use, accessible
          and that meet user's needs.</span
        >
      </h2>
      <nav class="flex space-x-4 mt-4">
        <SocialPill
          href="https://www.linkedin.com/in/javier-valverde-063820131/"
        >
          <LinkedInIcon class="size-4 md:size-6" />
          LinkedIn
        </SocialPill>
        <SocialPill href="https://github.com/jvalverdepa">
          <GitHubIcon class="size-4 md:size-6" />
          GitHub
        </SocialPill>
        <SocialPill href="mailto:javier.valverde.pa@gmail.com">
          <MailIcon class="size-4 md:size-6" />
          javier.valverde.pa@gmail.com
        </SocialPill>
      </nav>
    </section>
    <Experience />
  </main>
</Layout>
